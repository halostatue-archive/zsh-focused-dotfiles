#compdef rake

if [ -f Rakefile ]; then
  local recent
  recent=$(last-modified .rake_tasks~ Rakefile **/*.rake)

  if [[ ${recent} != '.rake_tasks~' ]]; then
    local rake

    if [ -e bin/rake ]; then
      rake=bin/rake
    elif [ -f Gemfile ]; then
      rake=bundle exec rake
    else
      rake=rake
    fi

    ${rake} --silent --tasks --all | grep -v '/' | cut -d " " -f 2 > .rake_tasks~ 2>/dev/null
  fi

  compadd $(cat .rake_tasks~)
fi
